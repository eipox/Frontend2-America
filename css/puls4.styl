 azul = #22BCE0
 gris_oscuro = #444
 gris_texto = #7A7A7A
 naranja = #DD4F24
 
 @font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
 a
 	color naranja
 	
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	transition font-size 1s
	
footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0		
	text-align center
	width 100%
		
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
			
		.mejor
			&:after
			&:before
				content " - "

form
	padding 0.8em
	display none //Solo debe mostrarse el form al hacer clic en el boton Publicar
	
	label
		display inline-block
		width 60px

header
	background gris_oscuro
	box-shadow 0 5px rgba(0, 0, 0, 0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative //Para que todos los elementos tomen a header como origen
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px		
		img
			width 52px
	
	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-size 14px
			font-weight bold //negrita
			font-style italic //cursiva
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			font-size italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black // movimiento en x, y, difuminacion, color
			&:before
				content "\e600"
				display inline-block
				font-family "iconitos"
				margin 0 3px 0 0
				
		.sizer
			text-decoration none	

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
				
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-decoration none
			text-align right
			top 15px
			width 50%
			z-index 0
			&:after
				display inline-block
				content "\e602"
				font-family "iconitos"
				text-shadow 1px 1px 0px black
			
				
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
				
	.menu
		height 40px
		line-height 40px
		margin 0 /*Todo elemento en bloque tiene un margen por defecto*/
		overflow-x auto
		padding 0
		white-space nowrap
		li
			display inline-block /*Establece los li en filas*/
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
.posts
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em
		
		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em
			
			.datos
				float right
				
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px 
					text-decoration none
					
				.estrellita
					text-decoration none

					&:after
						color #E0D561
						font-family "iconitos"
						font-size 1.5em
						content "\e601"
					
				
			.votos
				float left
				
				.down
				.up
					text-decoration none
				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e602" /*codigo de la flecha hacia abajo*/
						vertical-align bottom
				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e603"
						vertical-align bottom
			
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
				
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
					
				.fecha
					float right
					margin 0 1em 0 0

				.titulo
					color gris_oscuro
					font-size 1.1em
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
			
			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px
					
@media screen and (min-width: 768px)
			
		.posts
			.post
				display inline-block
				vertical-align top
				width 48%
				&:nth-child(odd)
					margin-right 2%
	

	
			
